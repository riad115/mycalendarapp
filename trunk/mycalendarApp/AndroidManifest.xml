<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycalendarapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mycalendarapp.MainCalenadarActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Month Activity -->
        <activity android:name="com.example.mycalendarapp.MonthlyView" />

        <!-- Weekly Activity -->
        <activity android:name="com.example.mycalendarapp.WeeklyView" />

        <!-- Daily Activity -->
        <activity android:name="com.example.mycalendarapp.DailyView" />

        <!-- Event Activity -->
        <activity android:name="com.example.mycalendarapp.EventActivity" />
        <activity
            android:name="com.example.mycalendarapp.DatePickerActivity"
            android:label="@string/title_activity_date_picker" >
        </activity>
        <activity
            android:name="com.example.mycalendarapp.TimePickerActivity"
            android:label="@string/title_activity_time_picker" >
        </activity>
        <activity
            android:name="com.example.mycalendarapp.EventDetailsActivity"
            android:label="@string/event_details" >
        </activity>
        <activity android:name="com.example.mycalendarapp.EventList" />
        <activity
            android:name="com.example.mycalendarapp.EditEventActivity"
            android:label="@string/title_activity_edit_event" >
        </activity>
    </application>

</manifest>
